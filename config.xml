<?xml version='1.0' encoding='utf-8'?>
<widget 
    version="0.2.3"
    android-versionCode="6" 
    id="org.openenergymonitor.devices"
    
    xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <name>Emon Devices</name>
    <description>
        Pair new EmonCMS devices to your local wifi without manually configuring each device
    </description>
    <author email="emrys@openenergymonitor.org" href="https://openenergymonitor.org">
        Open Energy Monitor Project
    </author>

    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:usesCleartextTraffic="true" />
    </edit-config>
    <allow-navigation href="*" />
    
    <icon src="icon.png" />
    <preference name="SplashScreen" value="none" />
    <preference name="SplashScreenDelay" value="0" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" launch-external="yes"/>
    <allow-intent href="geo:*" />

    <access origin="mailto:*" launch-external="true" />
    <access origin="*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="android-targetSdkVersion" value="29"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
